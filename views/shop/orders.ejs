<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/orders.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs',{user}) %>
        
        <main>
            <% if (orders.length <= 0) { %>
                <h1>Nothing there!</h1>
            <% } else { %>
                <ul class="orders">
                    <% orders.forEach(order => { %>
                        <li class="orders__item">
<div class="orderTitleWrap">
                                <h1>Order - # <%= order._id %> - <a href="/orders/<%= order._id %>" target="_blank">Invoice</a></h1>
                            <h1><%= order.createdAt.toUTCString() %></h1>
</div>
                            <ul class="orders__products">
                                <% order.products.forEach(p => { %>
                                    <li class="orders__products-item">
                                        <p class="subItem"><%= p.product.title %> (<%= p.quantity %>) </p>
                                        <p class="subItem">from Seller: <%= p.product.userId.email %> </p>
                                    </li>
                                <% }); %>
                            </ul>
                        </li>
                    <% }); %>
                </ul>
            <% } %>
        </main>
        <%- include('../includes/end.ejs') %>